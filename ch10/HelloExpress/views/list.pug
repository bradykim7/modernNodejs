html
    head
        title List Page

    body
        h1 List Page
        a(href="/products/insert") INSERT DATA
        hr

        table(width="100%" border="1")
            tr
                th DELETE
                th EDIT
                td ID_
                th ID
                th NAME
                th Model Number
                th Series

            for element in item
                tr
                    td
                        a(href=`/products/delete/${element._id}`) DELETE
                    td
                        a(href=`/products/edit/${element._id}`) EDIT
                    td= element._id
                    td= element.id
                    td= element.name
                    td= element.modelnumber
                    td= element.series
